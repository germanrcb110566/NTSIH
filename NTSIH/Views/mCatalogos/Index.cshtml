@model IEnumerable<NTSIH.Models.mCatalogo>

@{
    ViewBag.Title = "Sistema Hospitalario En Línea";
    Layout = ViewBag.layout;
}
<div id="caja">
    <div id="texto-left" style="color: blue" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.mensaje</b> - -</div>
    <div id="texto-rigth">@ViewBag.acceso</div>
</div>


<p>
    @Html.ActionLink("Crear Nuevo Maestro de Catálogo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catalogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.catalogo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Editar", new { id = item.registro_id }) |
                @Html.ActionLink("Details", "Detalles", new { id = item.registro_id }) |
                @Html.ActionLink("Delete", "Eliminar", new { id = item.registro_id })
            </td>
        </tr>
    }

</table>
