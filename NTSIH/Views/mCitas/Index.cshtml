@model IEnumerable<NTSIH.Models.mCita>

@{
    ViewBag.Title = "Sistema Hospitalario En Línea";
    Layout = ViewBag.layout;
}
<div id="caja">
    <div id="texto-left" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.msgmodulo</b> - -</div>
    <div id="texto-rigth" style="color: black; height:50px" class="alert">@ViewBag.acceso</div>
</div>
<br />
<br />
<br />

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table id="TablaPersonas" class="table table-striped table-bordered" style="width:80%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mPersona.nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catalogo.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mAtencion.diagnostico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mPersona.nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mPersona1.nombres)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mPersona.nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catalogo.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mAtencion.diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mPersona.nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mPersona1.nombres)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.registro_id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.registro_id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.registro_id })
            </td>
        </tr>
    }

</table>
<a href="Print?id=1">Generar PDF</a>
<br />
<br />
<br />

<div id="msgerror" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta"><b>@ViewBag.error</b></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
