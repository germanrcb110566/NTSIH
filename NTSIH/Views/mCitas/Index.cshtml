@model IEnumerable<NTSIH.Models.mCita>

@{
    ViewBag.Title = "Sistema Hospitalario En Línea";
    Layout = ViewBag.layout;
}
<div id="caja">
    <div id="texto-left" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.mensaje</b> - -</div>
    <div id="texto-rigth" style="color: black; height:50px" class="alert">@ViewBag.acceso</div>
</div>
<br />
<br />
<br />

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.motivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catalogo.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mAtencion.diagnostico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mPersona.identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mPersona1.identificacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catalogo.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mAtencion.diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mPersona.identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mPersona1.identificacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.registro_id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.registro_id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.registro_id })
            </td>
        </tr>
    }

</table>
