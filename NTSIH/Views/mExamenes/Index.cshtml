@model IEnumerable<NTSIH.Models.mTratamiento>

@{
    ViewBag.Title = "Sistema Hospitalario En Línea";
    Layout = ViewBag.layout;
}
<div id="caja">
    <div id="texto-left" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.msgmodulo</b> - -</div>
    <div id="texto-rigth" style="color: black; height:50px" class="alert">@ViewBag.acceso</div>
</div>
<br />
<br />
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="TablaPersonas" class="table table-striped table-bordered" style="width:80%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catalogo.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mCita.motivo)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Catalogo.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mCita.motivo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.registro_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.registro_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.registro_id })
                    @Html.ActionLink("Imprimir Receta", "Print", new { id = item.cita_id })
                </td>
            </tr>
        }

</table>
<br />
<br />
<br />

<div id="msgerror" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta"><b>@ViewBag.error</b></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
