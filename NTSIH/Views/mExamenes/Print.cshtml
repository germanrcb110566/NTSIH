@model IEnumerable<NTSIH.Models.mTratamiento>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RECETA</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

    <style>
        /* SOLUCIONA PROBLEMA DE SOLAPAMIENTO EN TABLAS <table /> */
        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }
    </style>

</head>
<tr>
    <th>
        <div id="caja">
            <div id="texto-rigth" style="color: blue; height:50px" class="alert alert-info">- - <b>DOCTOR @ViewBag.doctornombre</b> - -</div>
        </div>
        <br />
        <br />
        <br />
    </th>
    

    <th>
        <div id="caja">
            <div id="texto-rigth" style="color: blue; height:50px" class="alert alert-info">- - <b>@ViewBag.doctorapellido</b> - -</div>
        </div>
        <br />
        <br />
        <br />
    </th>
    <th>
        <div id="caja">
            <div id="texto-rigth" style="color: blue; height:50px" class="alert alert-info">- - <b>TELEFONO: @ViewBag.doctortelefono</b> - -</div>
        </div>
        <br />
        <br />
        <br />
    </th>
</tr>
<body style=" padding: 0px; margin: 0px;">
    
        
    

    <div class="container">
        <table id="TablaPersonas" class="table table-striped table-bordered" style="width:80%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.prescripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Catalogo.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.mCita.motivo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prescripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Catalogo.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mCita.motivo)
                    </td>

                </tr>
            }

        </table>
    </div>
</body>
</html>

