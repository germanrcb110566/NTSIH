@model IEnumerable<NTSIH.Models.rRol_Persona>

@{
    ViewBag.Title = "Sistema Hospitalario En Línea";
    Layout = ViewBag.layout;
}
<div id="caja">
    <div id="texto-left" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.msgmodulo</b> - -</div>
    <div id="texto-rigth" style="color: black; height:50px" class="alert">@ViewBag.acceso</div>
</div>
<br />
<br />
<br />

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table id="TablaPersonas" class="table table-striped table-bordered" style="width:80%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.registro_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catalogo.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mPersona.identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mPersona.nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mPersona.apellidos)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.registro_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Catalogo.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mPersona.identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mPersona.nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mPersona.apellidos)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.registro_id }) |
                    @Html.ActionLink("Detalles", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

</table>
<br />
<br />
<br />

<div id="msgerror" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta"><b>@ViewBag.error</b></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

